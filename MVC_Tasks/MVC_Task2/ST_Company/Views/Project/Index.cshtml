@model List<Project>
@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<h1>Projects Data</h1>

<a asp-controller="project" asp-action="add" class="btn btn-dark">Add_New_Project</a>
<hr />
<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Controls</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="project" asp-action="getbyid" asp-route-id="@item.ID"><i class="fa-solid fa-circle-info"></i></a>
                    -
                    <a asp-controller="project" asp-action="edit" asp-route-id="@item.ID"><i class="fa-solid fa-pen-to-square"></i></a>
                    -
                    <a asp-controller="project" asp-action="delete" asp-route-id="@item.ID"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
