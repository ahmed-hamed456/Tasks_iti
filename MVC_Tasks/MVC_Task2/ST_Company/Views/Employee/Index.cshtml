@model List<Employee>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Index</h1>

<a href="/employee/addform" class="btn btn-dark">Add</a>
<hr/>
<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Email</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <th scope="row">@(i++)</th>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Salary</td>
            <td>@item.Email</td>

                <td>
                    <a href="/employee/getbyid/@item.ID">Details</a>
                    -
                    <a href="/employee/EditForm/@item.ID">Edit</a>
                    -
                    <a href="/employee/delete/@item.ID">Delete</a>
                </td>
        </tr>
            }
    </tbody>
</table>
